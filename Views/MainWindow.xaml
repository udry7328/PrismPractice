<Window x:Class="PrismPractice.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >
    <!--BooleanToVisibilityConverterを使えるようにする-->
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolVisibilityConverter" ></BooleanToVisibilityConverter>
    </Window.Resources>
    
    <Grid>
        <TextBlock Text="{Binding Message}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <Button Visibility="{Binding YesButtonVisibled, 
                        Converter={StaticResource BoolVisibilityConverter}}" Content="はい" Command="{Binding YesCommand}" Width="100" Height="30"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="-150,0,0,20"/>
        <Button Visibility="{Binding NoButtonVisibled, 
                        Converter={StaticResource BoolVisibilityConverter}}" Content="いいえ" Command="{Binding NoCommand}" Width="100" Height="30"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="150,0,0,20"/>
        <Button Visibility="{Binding ReturnButtonVisibled, 
                        Converter={StaticResource BoolVisibilityConverter}}" Content="戻る" Command="{Binding ReturnCommand}" Width="100" Height="30"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </Grid>
</Window>
